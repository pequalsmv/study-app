#keydown function
def click():
    ide = identry.get() #this will collect the info
    od = odentry.get()
    ht = htentry.get()
    wt = wtentry.get()
    rai = (float(ide))/2
    rao = (float(od))/2
    vol = (3.14)*(float(rao)**2)*float(ht)-(3.14*(float(rai)**2)*float(ht))
    vol1 = (3.14)*(float(rai)**2)*float(ht)
    wt1 = float(wt)
    den = float(wt1)/vol
    output1.delete(0.0, END)
    output1.insert(END, vol)
    output2.insert(END, vol1)  
    output3.insert(END, den) 
    output4.insert(END, wt)
      
